{
  "manifest_version": 3,
  "name": "AI Chat Exporter - Save Conversations",
  "version": "1.0",
  "description": "Export AI chat history to JSON from ChatGPT, Gemini, and Grok. A privacy-first browser extension to save, backup, and archive your AI conversations locally.",
  "author": "AI Chat Exporter Contributors",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": [
        "src/utils/observer.js",
        "src/utils/exporter.js",
        "src/content/chatgpt.js"
      ],
      "css": ["src/styles/main.css"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "src/utils/observer.js",
        "src/utils/exporter.js",
        "src/content/gemini.js"
      ],
      "css": ["src/styles/main.css"]
    },
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": [
        "src/utils/observer.js",
        "src/utils/exporter.js",
        "src/content/grok.js"
      ],
      "css": ["src/styles/main.css"]
    }
  ],
  "action": {
    "default_title": "AI Chat Exporter Settings",
    "default_popup": "src/popup/popup.html"
  }
}
